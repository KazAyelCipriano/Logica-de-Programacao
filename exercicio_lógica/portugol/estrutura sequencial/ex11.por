programa {
  funcao inicio() {
    real lado_menor,lado_maior,area 

    escreva("Escreva o valor do lado maior: ")
    leia(lado_maior)
    escreva("Escreva o valor do lado menor: ")
    leia(lado_menor)

    area = (lado_maior*lado_menor) / 2

    escreva("Este losango possui uma area de ",area)
  }
}
